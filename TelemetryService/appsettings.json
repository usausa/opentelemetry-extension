{
  "Telemetry": {
    "EndPoints": [ "http://+:9228/" ],

    "EnableApplicationMetrics": true,
    "EnableHardwareMetrics": true,
    "EnableDiskInfoMetrics": true,
    "EnablePerformanceCounterMetrics": true,
    "EnableSensorOmronMetrics": true,
    "EnableSwitchBotMetrics": true,
    "EnableWFWattch2Metrics": true,

    "HardwareMonitor": {
      "IsBatteryEnabled": true,
      "IsControllerEnabled": true,
      "IsCpuEnabled": true,
      "IsGpuEnabled": true,
      "IsMemoryEnabled": true,
      "IsMotherboardEnabled": true,
      "IsNetworkEnabled": true,
      "IsStorageEnabled": true
    },

    "DiskInfo": {
    },

    "PerformanceCounter": {
      "Counter": [
        // Usage
        //{
        //  "Name": "cpu_usage",
        //  "Category": "Processor",
        //  "Counter": "% Processor Time"
        //},
        //{
        //  "Name": "memory_usage",
        //  "Category": "Memory",
        //  "Counter": "% Committed Bytes In Use"
        //},
        // Load
        {
          "Name": "processor_queue",
          "Category": "System",
          "Counter": "Processor Queue Length"
        },
        {
          "Name": "memory_page",
          "Category": "Memory",
          "Counter": "Pages/sec"
        },
        {
          "Name": "disk_time",
          "Category": "LogicalDisk",
          "Counter": "% Disk Time"
        },
        {
          "Name": "disk_queue",
          "Category": "PhysicalDisk",
          "Counter": "Current Disk Queue Length"
        },
        // Network
        {
          "Name": "tcp_connections_ip4",
          "Category": "TCPv4",
          "Counter": "Connections Established"
        },
        {
          "Name": "tcp_connections_ip6",
          "Category": "TCPv6",
          "Counter": "Connections Established"
        },
        // System
        {
          "Name": "uptime",
          "Category": "System",
          "Counter": "System Up Time"
        },
        {
          "Name": "process",
          "Category": "System",
          "Counter": "Processes"
        },
        {
          "Name": "thread",
          "Category": "Process",
          "Counter": "Thread Count",
          "Instance": "_Total"
        },
        {
          "Name": "handle",
          "Category": "Process",
          "Counter": "Handle Count",
          "Instance": "_Total"
        },
        {
          "Name": "context_switch",
          "Category": "System",
          "Counter": "Context Switches/sec"
        },
        {
          "Name": "exception_dispatch",
          "Category": "System",
          "Counter": "Exception Dispatches/sec"
        }
      ]
    },

    "SensorOmron": {
      "Device": [
        {
          "Port": "COM10",
          "Name": "Enviroment"
        }
      ]
    },

    "SwitchBot": {
      "Device": [
        {
          "Type": "Meter",
          "Address": "00:00:00:00:00:01",
          "Name": "My Room"
        },
        {
          "Type": "Meter",
          "Address": "00:00:00:00:00:02",
          "Name": "Server Room"
        },
        {
          "Type": "Meter",
          "Address": "00:00:00:00:00:03",
          "Name": "Refrigerator"
        },
        {
          "Type": "PlugMini",
          "Address": "00:00:00:00:00:11",
          "Name": "Note PC"
        },
        {
          "Type": "PlugMini",
          "Address": "00:00:00:00:00:12",
          "Name": "Refrigerator"
        }
      ]
    },

    "WFWattch2": {
      "Device": [
        {
          "Address": "192.168.100.101",
          "Name": "PC"
        },
        {
          "Address": "192.168.100.102",
          "Name": "Server"
        }
      ]
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.File"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log/service_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} {MachineName} [{ThreadId}] - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
