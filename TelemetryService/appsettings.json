{
  "Telemetry": {
    "EndPoints": [ "http://+:9464/" ],

    "EnableApplicationMetrics": true,
    "EnableHardwareMetrics": true,
    "EnableSensorOmronMetrics": true,
    "EnableSwitchBotMetrics": true,
    "EnableWFWattch2Metrics": true,

    "HardwareMonitor": {
      "IsBatteryEnabled": true,
      "IsControllerEnabled": true,
      "IsCpuEnabled": true,
      "IsGpuEnabled": true,
      "IsMemoryEnabled": true,
      "IsMotherboardEnabled": true,
      "IsNetworkEnabled": true,
      "IsStorageEnabled": true
    },

    "SensorOmron": {
      "Device": [
        {
          "Port": "COM12",
          "Name": "enviroment"
        }
      ]
    },

    "SwitchBot": {
      "Device": [
        {
          "Address": "B0:E9:FE:54:44:AE",
          "Name": "my room"
        },
        {
          "Address": "CF:34:30:37:44:1E",
          "Name": "server room"
        },
        {
          "Address": "C8:6B:80:86:5F:2C",
          "Name": "refrigerator"
        }
      ]
    },

    "WFWattch2": {
      "Device": [
        {
          "Address": "192.168.100.171",
          "Name": "pc"
        },
        {
          "Address": "192.168.100.172",
          "Name": "server"
        }
      ]
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.File"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "service_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} {MachineName} [{ThreadId}] - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
