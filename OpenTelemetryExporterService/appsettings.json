{
  "Service": {
    "EndPoints": ["http://+:9464/"],

    "UseApplicationMetrics": true,
    "UseHardwareMetrics": true,
    "UseSensorMetrics": true,

    "Hardware": {
      "Interval": 10000,
      "IsBatteryEnabled": true,
      "IsControllerEnabled": true,
      "IsCpuEnabled": true,
      "IsGpuEnabled": true,
      "IsMemoryEnabled": true,
      "IsMotherboardEnabled": true,
      "IsNetworkEnabled": true,
      "IsPsuEnabled": true,
      "IsStorageEnabled": true
    },

    "Sensor": {
      "Port": "COM12",
      "Interval": 10000,
      "IsTemperatureEnabled": true,
      "IsHumidityEnabled": true,
      "IsLightEnabled": true,
      "IsPressureEnabled": true,
      "IsNoiseEnabled": true,
      "IsDiscomfortEnabled": true,
      "IsHeatEnabled": true,
      "IsEtvocEnabled": true,
      "IsEco2Enabled": true,
      "IsSeismicEnabled": true
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.File"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../log/monitor_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} {MachineName} [{ThreadId}] - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
